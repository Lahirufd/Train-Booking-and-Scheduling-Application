<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Seat Booking Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_bg"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:elevation="6dp">

        <!-- Seat Booking Image -->
        <ImageView
            android:id="@+id/seatBookingImage"
            android:src="@drawable/seat_booking"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="Seat Booking Image"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_bg"
            android:padding="4dp"/>

        <!-- Payment Status -->
        <TextView
            android:id="@+id/textPaymentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Seats Booking Successful!"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <!-- Download Prompt -->
        <TextView
            android:id="@+id/textDownloadPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download your seat booking confirmation"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="12dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginVertical="10dp"/>

        <!-- Seat Booking Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textTrainName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Train Name:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/textTrainNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Train Number:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/textFromTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From - To:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/textSeatCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seats:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingVertical="4dp"/>
        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Download Seat Booking Button -->
            <Button
                android:id="@+id/downloadSeatBookingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📥 Download Confirmation"
                android:background="@drawable/rounded_green_button"
                app:backgroundTint="@null"
                android:backgroundTint="@null"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textSize="16sp"
                android:elevation="4dp"
                android:layout_marginTop="16dp"/>

            <!-- Back to Home Button -->
            <Button
                android:id="@+id/backToHomeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏠 Back to Home"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textSize="16sp"
                android:elevation="4dp"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
