<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color of the button -->
    <solid android:color="#E0F2F7" /> <!-- Blue color -->

    <!-- Set the corner radius to make the button rounded -->
    <corners android:radius="16dp" /> <!-- Adjust the radius for desired roundness -->

    <!-- Optional: Add a stroke (border) to the button -->
    <stroke
        android:width="2dp"
        android:color="#1976D2" /> <!-- Darker blue for the border -->

    <!-- Optional: Add padding to the button -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />
</shape>