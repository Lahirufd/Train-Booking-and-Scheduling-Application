<resources>
    <!-- Theme for Login and Signup Pages -->
    <style name="LoginSignupTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item> <!-- Transparent background -->
        <item name="android:windowNoTitle">true</item> <!-- No title bar -->
        <item name="android:windowFullscreen">true</item> <!-- Fullscreen -->
        <item name="colorPrimary">@color/medium_gray</item> <!-- Custom primary color -->
        <item name="colorAccent">@color/accent_color</item> <!-- Custom accent color -->
    </style>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#9E9E9E</item>
        <item name="colorPrimaryDark">#757575</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorOnSurface">#000000</item>
    </style>

    <!-- Text Style for Heading -->
    <style name="HeadingText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Button Style -->
    <style name="DashboardButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- CardView Style -->
    <style name="MaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

</resources>